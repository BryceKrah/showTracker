<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home</title>
</head>
<body>
  <!-- <% if (user) { %>
    <h3>Hello <%= user.name %></h3>
  <% } %> -->

  <h1>ShowTracker</h1>

    <div class="container">
      <% user.forEach(function(users) { %>
        <div>
          <div><%= users.name %></div>
          <div><%= users.bio %></div>
          <div>
            <% console.log(users) %>
            <form action="/users/<%=users.id%>/" method="GET">
              <button>See Profile</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>



  <div>
    <a href="/new">Signup</a>
  </div>

  <div>
    <a href="/login">Login</a>
  </div>

  <div>
    <form action="/logout?_method=DELETE" method="post">
      <button>Logout</button>
    </form>
  </div>

</body>
</html>
